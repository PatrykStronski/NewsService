generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}
enum UserRole {
  user
  moderator
  admin
}

enum UserStatus {
  active
  blocked
}

enum NewsStatus {
  published
  hidden
}

model User {
  id    Int     @default(autoincrement()) @id
  email String @unique
  phone String @unique
  password String
  salt String
  role UserRole
  status UserStatus
  news NewsEnt[]
  code Otp[]
}

model NewsEnt {
  id        Int      @default(autoincrement()) @id
  title     String
  cover String
  description String
  content   String?
  status NewsStatus
  author    User?    @relation(fields: [authorId], references: [id])
  authorId  Int?
}

model Otp {
  id        String   @id @default(uuid())
  user     User     @relation(fields: [userId], references: [id])
  userId    Int
  code      String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  expiresAt DateTime @db.Timestamp(5)
}